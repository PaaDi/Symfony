{% extends 'base.html.twig' %}

{% block title %}Pyramide{% endblock %}

{% block body %}

    {% include "base/header.html.twig" %}

    <div class="row mt-2">
        <div class="col mt-auto mb-auto font-weight-bold">Bonjour, Username!</div>
        <img src="Content/temp-images/indics.png" class="img-fluid w-75 mx-auto" alt="">
    </div>
    <div class="row mt-3 mb-2">
        <h4 class="col text-center">Toutes les applis :</h4>
    </div>
    <div class="row mx-4">
        <!--     \/  Boutons liens vers les apps \/     -->
        {% for bouton in listeDesApps %}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <button class="btn btn-light btn-outline-success mx-2 h-100" onclick="location.href = '{{ bouton.chemin_app }}'">
                <div class="row w-100">
                    <img src="{{ bouton.chemin_image }}" class="img-fluid col-4" style="object-fit: contain">
                    <div class="col-8 my-auto">
                        <h6 class="text-left" style="font-size: 1.2rem">{{ bouton.nom }}</h6>
                        <p class="text-left font-italic m-0" style="color: #666">
                            {{ bouton.description }}</p>
                    </div>
                </div>
            </button>
        </div>
        {% endfor %}

    </div>
{% endblock %}
